<Window x:Class="CorManagementSystem.AddDepartment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CorManagementSystem"
        mc:Ignorable="d"
        Title="添加部门信息" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Height="450" Width="790">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Background="AliceBlue">
            <Button Content="保存" Height="40" Width="50" HorizontalAlignment="Left" Background="AliceBlue" Click="SaveButton_Click" />
            <Button Content="退出" Height="40" Margin="10,0,0,0" Width="50" HorizontalAlignment="Left" Background="AliceBlue" Click="ExitButton_Click" />
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Label Content="请输入部门名称:" Height="30" Margin="0,10,0,0" Width="120" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="15"/>
            <TextBox Name="textBox" Width="200" FontSize="15" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,5,0,0" BorderBrush="Black"/>
        </StackPanel>
    </Grid>
</Window>
